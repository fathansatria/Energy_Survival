<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Setting">

    <ImageButton
        android:id="@+id/btn_back_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        app:srcCompat="@drawable/back_arrow" />

    <ImageView
        android:id="@+id/iv_text_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        app:srcCompat="@drawable/iv_settingteks" />

    <ImageView
        android:id="@+id/iv_settings_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/iv_text_settings"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/iv_soundsett" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_settings_box"
        android:layout_alignEnd="@+id/iv_settings_box"
        android:layout_alignRight="@+id/iv_settings_box"
        android:layout_alignBottom="@+id/iv_settings_box"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="118dp"
        android:layout_marginRight="118dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        app:srcCompat="@drawable/btn_soundon" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_settings_box"
        android:layout_alignRight="@+id/iv_settings_box"
        android:layout_alignBottom="@+id/iv_settings_box"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        app:srcCompat="@drawable/btn_soundmute" />
</RelativeLayout>